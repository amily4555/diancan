!!!
html
  head
    title Diancan
    link(rel='stylesheet',href='css/bootstrap.css')
    link(rel='stylesheet',href='css/bootstrap-responsive.css')
    link(rel='stylesheet',href='css/icomoon/style.css')
    script(src='js/jquery.js')
    script(src='js/bootstrap.js')
  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          a.brand(href='./')
            i.icon-glass 
            |Diancan
    div.container-fluid(style='margin-top:60px;')
      .row-fluid
        .span4
          .thumbnail
            caption
              h2 menu
            img(src='/menu.jpg')
        .span8
          .well
            table.table
              caption 
                h2 recipe
              thead
                tr.row-fluid
                  th.span4 
                    i.icon-user
                    |name
                  th.span5
                    i.icon-glass
                    |dish
              tbody
                for dish,name in items
                  tr.row-fluid
                    td.span4=name
                    td.span8=dish
                      a(href='#',onclick='$("input#inputname").val("#{name}");$("input#inputdish").val("#{dish}");return false;')
                        i.icon-pencil
                        |edit
            form.form-horizontal(method='post',action='./add')
              .control-group
                label.control-label(for='inputname')
                  i.icon-user
                  |name
                .controls
                  input#inputname(type='text',name='name')
              .control-group
                label.control-label(for='inputdish')
                  i.icon-glass
                  | dish
                .controls
                  input#inputdish(type='text',name='dish')
              .control-group
                .controls
                  button(type='submit') add/edit